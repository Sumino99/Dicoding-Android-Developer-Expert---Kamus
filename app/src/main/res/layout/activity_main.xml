<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ysn.dicodingandroiddeveloperexpert_kamus.ui.main.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/image_view_splash_screen"
        android:scaleType="centerCrop"
        android:src="@drawable/image_splash_screen" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="#212121" />

    <ImageView
        android:id="@+id/image_view_icon_kamuskus_activity_main"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/image_view_icon_kamuskus"
        android:src="@drawable/icon_kamuskus" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_container_text_app_name_activity_main"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_below="@+id/image_view_icon_kamuskus_activity_main"
        >

        <View
            android:layout_width="30dp"
            android:layout_height="1dp"
            />

        <TextView
            android:id="@+id/text_view_kamus_activity_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/kamus"
            android:textColor="@android:color/white"
            android:textSize="28sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:gravity="start"
            android:text="@string/kus"
            android:textColor="#E56284"
            android:textSize="28sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_preparing_data_activity_main"
        android:text="@string/preparing_data"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/linear_layout_container_text_app_name_activity_main"
        android:layout_marginTop="8dp"
        android:alpha="0.5"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar_loading_activity_main"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/text_view_preparing_data_activity_main"
        android:layout_marginTop="8dp"
        />

</RelativeLayout>
